        <%= stylesheet_link_tag "all" %>
        <%= javascript_include_tag  "modernizr-2.6.2.min" %>
        
        <style type="text/css">
        .konzerte {
          color: #EB1F78;
        }
        </style>

    </head>
    <body class="<%= page_classes %>">
        <header>
            <a id="logo" href="/" title="Home"><img src="/images/logo_kunsttag_150.png"></a>
            <button id="navigation-toggle">
              <span></span>
              <span></span>
              <span></span>
            </button>
            
            <nav id="navigation">
              
              <ul id="categories">
                <li><a class="konzerte" href="/konzerte">Konzerte</a></li>
                <li><a class="film-tanz-theater" href="/film-tanz-theater">Film, Tanz, Theater</a></li>
                <li><a class="kunst-und-medien" href="/kunst-und-medien">Kunst &amp; Medien</a></li>
                <li><a class="design" href="/design">Design</a></li>
              </ul>
              
              <ul id="cities">
                {block:HasPages}
                  {block:Pages}
                    <li><a href="{URL}">{Label}</a></li>
                  {/block:Pages}
                {/block:HasPages}
              </ul>
              
              <ul id="days">
                <li><a id="heute" href="">Heute</a></li>
                <li><a id="morgen" href="">Morgen</a></li>
              </ul>
              
              <ul>
                {block:AskEnabled}
                  <li><a href="/ask">{AskLabel}</a></li>
                {/block:AskEnabled}
                {block:SubmissionsEnabled}
                  <li><a href="/submit">{SubmitLabel}</a></li>
                {/block:SubmissionsEnabled}                
              </ul>
              
            </nav>
            
        </header>
        
        <div>
          <%= yield %>          
        </div>

        <!-- Add your site or application content here -->
        <%= javascript_include_tag  "all" %>

